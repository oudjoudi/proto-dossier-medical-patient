<t:container 
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" 
	xmlns:p="tapestry:parameter">

	<div class="row-fluid">
		<label class="span5" style="font-weight:bold">
			 ${label}
		</label>
		<div class="span7">
			<t:body/>
		</div>
	</div>
